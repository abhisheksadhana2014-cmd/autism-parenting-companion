### `src/components/SessionForm.tsx`

```typescript
import { useState } from 'react'
import { ConnectionSession } from '../types'
import { v4 as uuidv4 } from 'crypto'

interface SessionFormProps {
  onSubmit: (session: ConnectionSession) => void
  onCancel: () => void
}

export default function SessionForm({ onSubmit, onCancel }: SessionFormProps) {
  const today = new Date().toISOString().split('T')[0]
  const [formData, setFormData] = useState({
    date: today,
    time: '10:00',
    duration: 1800,
    context: '',
    activity: '',
    childLedMomentsCount: 0,
    connectionQuality: 5,
    notes: '',
  })

  const handleSubmit = (e: React.FormEvent) => {
    e.preventDefault()

    const session: ConnectionSession = {
      id: uuidv4(),
      date: formData.date,
      time: formData.time,
      duration: formData.duration,
      context: formData.context,
      activity: formData.activity,
      childLedMomentsCount: formData.childLedMomentsCount,
      connectionQuality: formData.connectionQuality,
      notes: formData.notes,
      createdAt: new Date().toISOString(),
    }

    onSubmit(session)
  }

  return (
    <div className="bg-white dark:bg-soft-800 rounded-xl p-6 border border-soft-200 dark:border-soft-700">
      <h2 className="text-xl font-bold mb-4">Log a Session</h2>

      <form onSubmit={handleSubmit} className="space-y-4">
        <div className="grid grid-cols-2 gap-3">
          <div>
            <label className="block text-sm font-medium mb-1">Date</label>
            <input
              type="date"
              value={formData.date}
              onChange={(e) => setFormData({ ...formData, date: e.target.value })}
              className="w-full px-3 py-2 border border-soft-200 dark:border-soft-600 rounded-lg dark:bg-soft-700"
            />
          </div>
          <div>
            <label className="block text-sm font-medium mb-1">Time</label>
            <input
              type="time"
              value={formData.time}
              onChange={(e) => setFormData({ ...formData, time: e.target.value })}
              className="w-full px-3 py-2 border border-soft-200 dark:border-soft-600 rounded-lg dark:bg-soft-700"
            />
          </div>
        </div>

        <div>
          <label className="block text-sm font-medium mb-1">Activity / Game</label>
          <input
            type="text"
            value={formData.activity}
            onChange={(e) => setFormData({ ...formData, activity: e.target.value })}
            placeholder="e.g., Building blocks, Sensory play"
            className="w-full px-3 py-2 border border-soft-200 dark:border-soft-600 rounded-lg dark:bg-soft-700"
          />
        </div>

        <div>
          <label className="block text-sm font-medium mb-1">Context</label>
          <input
            type="text"
            value={formData.context}
            onChange={(e) => setFormData({ ...formData, context: e.target.value })}
            placeholder="e.g., Morning routine, Afternoon downtime"
            className="w-full px-3 py-2 border border-soft-200 dark:border-soft-600 rounded-lg dark:bg-soft-700"
          />
        </div>

        <div className="grid grid-cols-2 gap-3">
          <div>
            <label className="block text-sm font-medium mb-1">Duration (seconds)</label>
            <input
              type="number"
              min="0"
              value={formData.duration}
              onChange={(e) => setFormData({ ...formData, duration: parseInt(e.target.value) || 0 })}
              className="w-full px-3 py-2 border border-soft-200 dark:border-soft-600 rounded-lg dark:bg-soft-700"
            />
          </div>
          <div>
            <label className="block text-sm font-medium mb-1">Child-Led Moments</label>
            <input
              type="number"
              min="0"
              value={formData.childLedMomentsCount}
              onChange={(e) => setFormData({ ...formData, childLedMomentsCount: parseInt(e.target.value) || 0 })}
              className="w-full px-3 py-2 border border-soft-200 dark:border-soft-600 rounded-lg dark:bg-soft-700"
            />
          </div>
        </div>

        <div>
          <label className="block text-sm font-medium mb-2">Connection Quality: {formData.connectionQuality}/10</label>
          <input
            type="range"
            min="1"
            max="10"
            value={formData.connectionQuality}
            onChange={(e) => setFormData({ ...formData, connectionQuality: parseInt(e.target.value) })}
            className="w-full"
          />
        </div>

        <div>
          <label className="block text-sm font-medium mb-1">Notes</label>
          <textarea
            value={formData.notes}
            onChange={(e) => setFormData({ ...formData, notes: e.target.value })}
            placeholder="Optional notes about this session..."
            className="w-full px-3 py-2 border border-soft-200 dark:border-soft-600 rounded-lg dark:bg-soft-700 min-h-24"
          />
        </div>

        <div className="flex gap-2">
          <button
            type="submit"
            className="flex-1 bg-primary-500 hover:bg-primary-600 text-white font-bold py-2 rounded-lg transition"
          >
            Save Session
          </button>
          <button
            type="button"
            onClick={onCancel}
            className="flex-1 bg-soft-100 dark:bg-soft-700 hover:bg-soft-200 dark:hover:bg-soft-600 font-bold py-2 rounded-lg transition"
          >
            Cancel
          </button>
        </div>
      </form>
    </div>
  )
}
```

