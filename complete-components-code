### `src/pages/Resources.tsx`

```typescript
import { useState, useEffect } from 'react'
import { Plus, Trash2, Edit2, Download } from 'lucide-react'
import { ResourceNote } from '../types'
import { getNotes, addNote, updateNote, deleteNote } from '../lib/storage'
import NoteForm from '../components/NoteForm'

export default function Resources() {
  const [notes, setNotes] = useState<ResourceNote[]>([])
  const [showForm, setShowForm] = useState(false)
  const [editingId, setEditingId] = useState<string | null>(null)
  const [expandedId, setExpandedId] = useState<string | null>(null)

  useEffect(() => {
    setNotes(getNotes())
  }, [])

  const handleAddNote = (note: ResourceNote) => {
    addNote(note)
    setNotes([note, ...notes])
    setShowForm(false)
  }

  const handleUpdateNote = (id: string, updates: Partial<ResourceNote>) => {
    updateNote(id, updates as ResourceNote)
    setNotes(notes.map(n => (n.id === id ? { ...n, ...updates } : n)))
    setEditingId(null)
  }

  const handleDelete = (id: string) => {
    if (window.confirm('Delete this note?')) {
      deleteNote(id)
      setNotes(notes.filter(n => n.id !== id))
    }
  }

  const handleExportMarkdown = (note: ResourceNote) => {
    const markdown = `# ${note.title}\n\n${note.content}`
    const blob = new Blob([markdown], { type: 'text/markdown' })
    const url = window.URL.createObjectURL(blob)
    const a = document.createElement('a')
    a.href = url
    a.download = `${note.title.replace(/\s/g, '-')}.md`
    a.click()
  }

  return (
    <div className="space-y-6">
      <div className="flex items-center justify-between">
        <h1 className="text-3xl font-bold">Resources & Notes</h1>
        <button
          onClick={() => setShowForm(true)}
          className="flex items-center gap-2 px-4 py-2 bg-primary-500 hover:bg-primary-600 text-white rounded-lg transition"
        >
          <Plus className="w-4 h-4" />
          New Note
        </button>
      </div>

      {showForm && (
        <NoteForm
          onSubmit={handleAddNote}
          onCancel={() => setShowForm(false)}
        />
      )}

      {notes.length === 0 ? (
        <div className="text-center py-12 bg-white dark:bg-soft-800 rounded-xl border border-soft-200 dark:border-soft-700">
          <p className="text-soft-600 dark:text-soft-400 mb-4">
            Create notes for play ideas, routines, and learnings.
          </p>
          <button
            onClick={() => setShowForm(true)}
            className="px-6 py-2 bg-primary-500 hover:bg-primary-600 text-white rounded-lg transition"
          >
            Create First Note
          </button>
        </div>
      ) : (
        <div className="grid gap-4">
          {notes.map(note => (
            <div
              key={note.id}
              className="bg-white dark:bg-soft-800 rounded-xl border border-soft-200 dark:border-soft-700 overflow-hidden"
            >
              <div className="p-4">
                <div className="flex items-start justify-between mb-2">
                  <h3 className="text-lg font-bold">{note.title}</h3>
                  <div className="flex gap-2">
                    <button
                      onClick={() => handleExportMarkdown(note)}
                      className="p-2 hover:bg-soft-100 dark:hover:bg-soft-700 rounded transition"
                      title="Export as Markdown"
                    >
                      <Download className="w-4 h-4" />
                    </button>
                    <button
                      onClick={() => setEditingId(editingId === note.id ? null : note.id)}
                      className="p-2 hover:bg-soft-100 dark:hover:bg-soft-700 rounded transition"
                    >
                      <Edit2 className="w-4 h-4" />
                    </button>
                    <button
                      onClick={() => handleDelete(note.id)}
                      className="p-2 hover:bg-secondary-100 dark:hover:bg-secondary-900 text-secondary-600 dark:text-secondary-400 rounded transition"
                    >
                      <Trash2 className="w-4 h-4" />
                    </button>
                  </div>
                </div>

                <p className="text-xs text-soft-500 dark:text-soft-500 mb-3">
                  Created {new Date(note.createdAt).toLocaleDateString()}
                </p>

                {editingId === note.id ? (
                  <textarea
                    defaultValue={note.content}
                    onBlur={(e) => handleUpdateNote(note.id, { content: e.target.value })}
                    className="w-full p-3 border border-soft-200 dark:border-soft-600 rounded-lg dark:bg-soft-700 min-h-48 focus:outline-none focus:border-primary-500"
                    autoFocus
                  />
                ) : (
                  <button
                    onClick={() => setExpandedId(expandedId === note.id ? null : note.id)}
                    className="w-full text-left"
                  >
                    <div className={`prose dark:prose-invert max-w-none text-sm ${
                      expandedId === note.id ? '' : 'line-clamp-3'
                    }`}>
                      {note.content.split('\n').slice(0, 3).join('\n')}...
                    </div>
                  </button>
                )}
              </div>
            </div>
          ))}
        </div>
      )}
    </div>
  )
}
```

