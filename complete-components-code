### `src/pages/Growth.tsx`

```typescript
import { useState, useEffect } from 'react'
import { Plus } from 'lucide-react'
import { GoalCard, SkillAreaType, SKILL_AREAS } from '../types'
import { getGoals, addGoal, updateGoal, deleteGoal } from '../lib/storage'
import GrowthForm from '../components/GrowthForm'

export default function Growth() {
  const [goals, setGoals] = useState<GoalCard[]>([])
  const [showForm, setShowForm] = useState(false)
  const [selectedSkillArea, setSelectedSkillArea] = useState<SkillAreaType | null>(null)

  useEffect(() => {
    setGoals(getGoals())
  }, [])

  const handleAddGoal = (goal: GoalCard) => {
    addGoal(goal)
    setGoals([...goals, goal])
    setShowForm(false)
  }

  const handleToggleMilestone = (goalId: string, milestoneId: string) => {
    const goal = goals.find(g => g.id === goalId)
    if (goal) {
      const updated = {
        ...goal,
        milestones: goal.milestones.map(m =>
          m.id === milestoneId ? { ...m, completed: !m.completed } : m
        ),
      }
      updateGoal(goalId, updated)
      setGoals(goals.map(g => (g.id === goalId ? updated : g)))
    }
  }

  const handleDeleteGoal = (id: string) => {
    if (window.confirm('Delete this goal?')) {
      deleteGoal(id)
      setGoals(goals.filter(g => g.id !== id))
    }
  }

  const skillAreas = Object.entries(SKILL_AREAS) as [SkillAreaType, string][]

  return (
    <div className="space-y-6">
      <div className="flex items-center justify-between">
        <h1 className="text-3xl font-bold">Growth Targets</h1>
        <button
          onClick={() => setShowForm(true)}
          className="flex items-center gap-2 px-4 py-2 bg-primary-500 hover:bg-primary-600 text-white rounded-lg transition"
        >
          <Plus className="w-4 h-4" />
          New Goal
        </button>
      </div>

      {showForm && (
        <GrowthForm
          onSubmit={handleAddGoal}
          onCancel={() => setShowForm(false)}
        />
      )}

      {/* Goals by Skill Area */}
      <div className="space-y-6">
        {skillAreas.map(([skillAreaKey, skillAreaLabel]) => {
          const skillGoals = goals.filter(g => g.skillArea === skillAreaKey)
          return (
            <div key={skillAreaKey}>
              <h2 className="text-lg font-bold mb-3">{skillAreaLabel}</h2>
              {skillGoals.length === 0 ? (
                <p className="text-soft-600 dark:text-soft-400 text-sm">
                  No goals yet for this area.
                </p>
              ) : (
                <div className="grid gap-3">
                  {skillGoals.map(goal => {
                    const completedMilestones = goal.milestones.filter(m => m.completed).length
                    const progressPercent = (completedMilestones / goal.milestones.length) * 100
                    return (
                      <div
                        key={goal.id}
                        className="bg-white dark:bg-soft-800 rounded-xl p-4 border border-soft-200 dark:border-soft-700"
                      >
                        <div className="flex items-start justify-between mb-3">
                          <div className="flex-1">
                            <p className="font-bold">{goal.title}</p>
                            {goal.description && (
                              <p className="text-sm text-soft-600 dark:text-soft-400">
                                {goal.description}
                              </p>
                            )}
                          </div>
                          <button
                            onClick={() => handleDeleteGoal(goal.id)}
                            className="text-secondary-600 hover:text-secondary-700 transition ml-2"
                          >
                            ‚úï
                          </button>
                        </div>

                        <div className="mb-3">
                          <div className="flex justify-between text-sm mb-1">
                            <span>Current Level</span>
                            <span className="font-bold">{goal.currentLevel}/{goal.targetLevel}</span>
                          </div>
                          <div className="w-full bg-soft-200 dark:bg-soft-600 rounded-full h-2">
                            <div
                              className="bg-primary-500 h-2 rounded-full transition"
                              style={{ width: `${(goal.currentLevel / goal.targetLevel) * 100}%` }}
                            />
                          </div>
                        </div>

                        <div className="space-y-2">
                          <p className="text-sm font-medium">Milestones</p>
                          {goal.milestones.map(milestone => (
                            <label key={milestone.id} className="flex items-start gap-2 cursor-pointer p-2 hover:bg-soft-50 dark:hover:bg-soft-700 rounded">
                              <input
                                type="checkbox"
                                checked={milestone.completed}
                                onChange={() => handleToggleMilestone(goal.id, milestone.id)}
                                className="mt-1"
                              />
                              <div className="flex-1">
                                <p className={`text-sm ${milestone.completed ? 'line-through text-soft-500' : ''}`}>
                                  {milestone.text}
                                </p>
                                {milestone.notes && (
                                  <p className="text-xs text-soft-600 dark:text-soft-400">
                                    {milestone.notes}
                                  </p>
                                )}
                              </div>
                            </label>
                          ))}
                        </div>
                      </div>
                    )
                  })}
                </div>
              )}
            </div>
          )
        })}
      </div>
    </div>
  )
}
```

