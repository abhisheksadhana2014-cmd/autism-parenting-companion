### `src/pages/QuickEntry.tsx`

```typescript
import { useState } from 'react'
import { X } from 'lucide-react'
import { ReframeJournalEntry } from '../types'
import { addJournalEntry } from '../lib/storage'
import { v4 as uuidv4 } from 'crypto'

interface QuickEntryProps {
  onClose: () => void
}

export default function QuickEntry({ onClose }: QuickEntryProps) {
  const [trigger, setTrigger] = useState('')
  const [thought, setThought] = useState('')
  const [feeling, setFeeling] = useState('frustrated')
  const [action, setAction] = useState('')
  const [alternativeThought, setAlternativeThought] = useState('')
  const [tags, setTags] = useState<string[]>([])
  const [newTag, setNewTag] = useState('')
  const [submitted, setSubmitted] = useState(false)

  const commonTags = ['transitions', 'sensory', 'sleep', 'food', 'public-place', 'sibling', 'meltdown', 'routine']

  const handleSubmit = (e: React.FormEvent) => {
    e.preventDefault()

    if (!trigger || !thought) {
      alert('Please fill in trigger and thought')
      return
    }

    const entry: ReframeJournalEntry = {
      id: uuidv4(),
      date: new Date().toISOString().split('T')[0],
      trigger,
      thought,
      response: { feeling, action },
      alternativeThought,
      tags,
      intensity: 3,
      createdAt: new Date().toISOString(),
    }

    addJournalEntry(entry)
    setSubmitted(true)

    setTimeout(() => {
      onClose()
    }, 2000)
  }

  if (submitted) {
    return (
      <div className="fixed inset-0 bg-black/50 flex items-center justify-center z-50">
        <div className="bg-white dark:bg-soft-800 rounded-2xl p-8 text-center max-w-sm">
          <div className="text-4xl mb-4">‚ú®</div>
          <p className="text-lg font-bold mb-2">You captured that moment</p>
          <p className="text-soft-600 dark:text-soft-400">Great reflection. Try again tomorrow.</p>
        </div>
      </div>
    )
  }

  return (
    <div className="fixed inset-0 bg-black/50 flex items-end md:items-center justify-center z-50 p-4">
      <div className="bg-white dark:bg-soft-800 rounded-2xl shadow-xl w-full max-w-md max-h-[90vh] overflow-y-auto">
        <div className="sticky top-0 bg-white dark:bg-soft-800 border-b border-soft-200 dark:border-soft-700 p-4 flex items-center justify-between">
          <h2 className="text-lg font-bold">Quick Reflection</h2>
          <button onClick={onClose} className="p-1 hover:bg-soft-100 dark:hover:bg-soft-700 rounded">
            <X className="w-5 h-5" />
          </button>
        </div>

        <form onSubmit={handleSubmit} className="p-4 space-y-4">
          <div>
            <label className="block text-sm font-medium mb-1">What happened?</label>
            <input
              type="text"
              value={trigger}
              onChange={(e) => setTrigger(e.target.value)}
              placeholder="The trigger..."
              className="w-full px-3 py-2 border border-soft-200 dark:border-soft-600 rounded-lg dark:bg-soft-700"
              autoFocus
            />
          </div>

          <div>
            <label className="block text-sm font-medium mb-1">What did you think?</label>
            <input
              type="text"
              value={thought}
              onChange={(e) => setThought(e.target.value)}
              placeholder="Your interpretation..."
              className="w-full px-3 py-2 border border-soft-200 dark:border-soft-600 rounded-lg dark:bg-soft-700"
            />
          </div>

          <div className="grid grid-cols-2 gap-3">
            <div>
              <label className="block text-sm font-medium mb-1">Feeling</label>
              <select
                value={feeling}
                onChange={(e) => setFeeling(e.target.value)}
                className="w-full px-3 py-2 border border-soft-200 dark:border-soft-600 rounded-lg dark:bg-soft-700"
              >
                <option>frustrated</option>
                <option>overwhelmed</option>
                <option>anxious</option>
                <option>sad</option>
                <option>angry</option>
                <option>tired</option>
              </select>
            </div>

            <div>
              <label className="block text-sm font-medium mb-1">What you did</label>
              <input
                type="text"
                value={action}
                onChange={(e) => setAction(e.target.value)}
                placeholder="Your response"
                className="w-full px-3 py-2 border border-soft-200 dark:border-soft-600 rounded-lg dark:bg-soft-700"
              />
            </div>
          </div>

          <div>
            <label className="block text-sm font-medium mb-1">New thought to try</label>
            <input
              type="text"
              value={alternativeThought}
              onChange={(e) => setAlternativeThought(e.target.value)}
              placeholder="A kinder interpretation..."
              className="w-full px-3 py-2 border border-soft-200 dark:border-soft-600 rounded-lg dark:bg-soft-700"
            />
          </div>

          {/* Tags */}
          <div>
            <label className="block text-sm font-medium mb-2">Tags</label>
            <div className="flex flex-wrap gap-2 mb-2">
              {commonTags.map(tag => (
                <button
                  key={tag}
                  type="button"
                  onClick={() => setTags(tags.includes(tag) ? tags.filter(t => t !== tag) : [...tags, tag])}
                  className={`px-3 py-1 rounded-full text-sm transition ${
                    tags.includes(tag)
                      ? 'bg-primary-500 text-white'
                      : 'bg-soft-100 dark:bg-soft-700 hover:bg-soft-200'
                  }`}
                >
                  {tag}
                </button>
              ))}
            </div>
          </div>

          <button
            type="submit"
            className="w-full bg-primary-500 hover:bg-primary-600 text-white font-bold py-3 rounded-lg transition"
          >
            Save Reflection
          </button>
        </form>
      </div>
    </div>
  )
}
```

