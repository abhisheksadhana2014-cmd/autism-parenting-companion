```typescript
import { ConnectionSession } from '../types'
import { Trash2 } from 'lucide-react'

interface SessionCardProps {
  session: ConnectionSession
  onDelete: () => void
}

export default function SessionCard({ session, onDelete }: SessionCardProps) {
  return (
    <div className="bg-white dark:bg-soft-800 rounded-xl p-4 border border-soft-200 dark:border-soft-700">
      <div className="flex items-start justify-between mb-3">
        <div>
          <p className="font-bold">{session.activity || 'Connection Play'}</p>
          <p className="text-sm text-soft-600 dark:text-soft-400">
            {new Date(session.date).toLocaleDateString()} at {session.time}
          </p>
        </div>
        <button
          onClick={onDelete}
          className="p-2 hover:bg-secondary-100 dark:hover:bg-secondary-900 text-secondary-600 dark:text-secondary-400 rounded transition"
        >
          <Trash2 className="w-4 h-4" />
        </button>
      </div>

      <div className="grid grid-cols-3 gap-3 mb-3">
        <div className="text-center p-2 bg-soft-50 dark:bg-soft-700 rounded">
          <p className="text-2xl font-bold">{Math.round(session.duration / 60)}</p>
          <p className="text-xs text-soft-600 dark:text-soft-400">Minutes</p>
        </div>
        <div className="text-center p-2 bg-primary-50 dark:bg-primary-900 rounded">
          <p className="text-2xl font-bold text-primary-600 dark:text-primary-400">{session.connectionQuality}</p>
          <p className="text-xs text-soft-600 dark:text-soft-400">Quality</p>
        </div>
        <div className="text-center p-2 bg-accent-50 dark:bg-accent-900 rounded">
          <p className="text-2xl font-bold text-accent-600 dark:text-accent-400">{session.childLedMomentsCount}</p>
          <p className="text-xs text-soft-600 dark:text-soft-400">Child-Led</p>
        </div>
      </div>

      {session.context && (
        <div className="mb-2 p-2 bg-soft-50 dark:bg-soft-700 rounded text-sm">
          <p className="font-medium">Context</p>
          <p className="text-soft-700 dark:text-soft-300">{session.context}</p>
        </div>
      )}

      {session.notes && (
        <div className="p-2 bg-soft-50 dark:bg-soft-700 rounded text-sm">
          <p className="font-medium">Notes</p>
          <p className="text-soft-700 dark:text-soft-300">{session.notes}</p>
        </div>
      )}
    </div>
  )
}
