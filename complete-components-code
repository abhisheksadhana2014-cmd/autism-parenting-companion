## COMPLETE PAGE FILES

### `src/pages/SessionTracker.tsx`

```typescript
import { useState, useEffect } from 'react'
import { Plus, Trash2, Download } from 'lucide-react'
import { ConnectionSession } from '../types'
import { getSessions, addSession, deleteSession } from '../lib/storage'
import SessionCard from '../components/SessionCard'
import SessionForm from '../components/SessionForm'

export default function SessionTracker() {
  const [sessions, setSessions] = useState<ConnectionSession[]>([])
  const [showForm, setShowForm] = useState(false)

  useEffect(() => {
    setSessions(getSessions())
  }, [])

  const handleAddSession = (session: ConnectionSession) => {
    addSession(session)
    setSessions([...sessions, session])
    setShowForm(false)
  }

  const handleDelete = (id: string) => {
    if (window.confirm('Delete this session?')) {
      deleteSession(id)
      setSessions(sessions.filter(s => s.id !== id))
    }
  }

  const handleExportCSV = () => {
    const headers = ['Date', 'Time', 'Duration (min)', 'Context', 'Activity', 'Child-Led Moments', 'Quality (1-10)', 'Notes']
    const rows = sessions.map(s => [
      s.date,
      s.time,
      Math.round(s.duration / 60),
      s.context || '',
      s.activity || '',
      s.childLedMomentsCount,
      s.connectionQuality,
      s.notes || '',
    ])

    const csv = [headers, ...rows].map(row => 
      row.map(cell => `"${cell}"`).join(',')
    ).join('\n')

    const blob = new Blob([csv], { type: 'text/csv' })
    const url = window.URL.createObjectURL(blob)
    const a = document.createElement('a')
    a.href = url
    a.download = `sessions-${new Date().toISOString().split('T')[0]}.csv`
    a.click()
  }

  return (
    <div className="space-y-6">
      <div className="flex items-center justify-between">
        <h1 className="text-3xl font-bold">Connection Play Sessions</h1>
        <div className="flex gap-2">
          {sessions.length > 0 && (
            <button
              onClick={handleExportCSV}
              className="flex items-center gap-2 px-4 py-2 bg-soft-100 dark:bg-soft-700 rounded-lg hover:bg-soft-200 dark:hover:bg-soft-600 transition"
            >
              <Download className="w-4 h-4" />
              Export CSV
            </button>
          )}
          <button
            onClick={() => setShowForm(true)}
            className="flex items-center gap-2 px-4 py-2 bg-primary-500 hover:bg-primary-600 text-white rounded-lg transition"
          >
            <Plus className="w-4 h-4" />
            New Session
          </button>
        </div>
      </div>

      {showForm && (
        <SessionForm
          onSubmit={handleAddSession}
          onCancel={() => setShowForm(false)}
        />
      )}

      {sessions.length === 0 ? (
        <div className="text-center py-12 bg-white dark:bg-soft-800 rounded-xl border border-soft-200 dark:border-soft-700">
          <p className="text-soft-600 dark:text-soft-400 mb-4">
            No sessions yet. Start by logging a connection play session.
          </p>
          <button
            onClick={() => setShowForm(true)}
            className="px-6 py-2 bg-primary-500 hover:bg-primary-600 text-white rounded-lg transition"
          >
            Start First Session
          </button>
        </div>
      ) : (
        <div className="grid gap-4">
          {sessions.slice().reverse().map(session => (
            <SessionCard
              key={session.id}
              session={session}
              onDelete={() => handleDelete(session.id)}
            />
          ))}
        </div>
      )}
    </div>
  )
}
```

