### `src/pages/Assessment.tsx`

```typescript
import { useState, useEffect } from 'react'
import { Plus } from 'lucide-react'
import { ConnectionAssessment } from '../types'
import { getAssessments, addAssessment, deleteAssessment } from '../lib/storage'
import AssessmentForm from '../components/AssessmentForm'

const RUBRIC_ITEMS = [
  {
    id: 'energyMatching',
    label: 'Energy Matching',
    description: 'Do you match your child\'s pace and emotional energy?',
  },
  {
    id: 'imitation',
    label: 'Imitation & Mirroring',
    description: 'Are you gently copying your child\'s sounds, movements, expressions?',
  },
  {
    id: 'responsiveness',
    label: 'Responsiveness',
    description: 'Do you respond to your child\'s bids for connection?',
  },
  {
    id: 'warmth',
    label: 'Warmth & Presence',
    description: 'Do you feel warm, present, and non-judgmental?',
  },
]

const SCALE_DESCRIPTIONS = [
  { value: 1, label: 'Not at all', emoji: 'üòî' },
  { value: 2, label: 'Slightly', emoji: 'üòê' },
  { value: 3, label: 'Somewhat', emoji: 'üôÇ' },
  { value: 4, label: 'Mostly', emoji: 'üòä' },
  { value: 5, label: 'Fully', emoji: 'üòÑ' },
]

export default function Assessment() {
  const [assessments, setAssessments] = useState<ConnectionAssessment[]>([])
  const [showForm, setShowForm] = useState(false)

  useEffect(() => {
    setAssessments(getAssessments())
  }, [])

  const handleAddAssessment = (assessment: ConnectionAssessment) => {
    addAssessment(assessment)
    setAssessments([...assessments, assessment])
    setShowForm(false)
  }

  const handleDelete = (id: string) => {
    if (window.confirm('Delete this assessment?')) {
      deleteAssessment(id)
      setAssessments(assessments.filter(a => a.id !== id))
    }
  }

  const avgScore = assessments.length > 0
    ? (assessments.reduce((sum, a) => sum + a.energyMatching + a.imitation + a.responsiveness + a.warmth, 0) / (assessments.length * 4))
    : 0

  return (
    <div className="space-y-6">
      <div className="flex items-center justify-between">
        <h1 className="text-3xl font-bold">Connection Assessment</h1>
        <button
          onClick={() => setShowForm(true)}
          className="flex items-center gap-2 px-4 py-2 bg-primary-500 hover:bg-primary-600 text-white rounded-lg transition"
        >
          <Plus className="w-4 h-4" />
          New Assessment
        </button>
      </div>

      {/* Current Score */}
      {assessments.length > 0 && (
        <div className="bg-gradient-to-r from-primary-50 to-secondary-50 dark:from-primary-900 dark:to-secondary-900 rounded-2xl p-6 border border-primary-200 dark:border-primary-800">
          <p className="text-soft-600 dark:text-soft-400 text-sm mb-2">Your Average Connection Score</p>
          <p className="text-5xl font-bold text-primary-600 dark:text-primary-400">
            {(avgScore * 5).toFixed(1)}/5
          </p>
          <div className="mt-4 w-full bg-soft-200 dark:bg-soft-700 rounded-full h-3">
            <div
              className="bg-primary-500 h-3 rounded-full transition"
              style={{ width: `${(avgScore / 5) * 100}%` }}
            />
          </div>
        </div>
      )}

      {/* Rubric Guide */}
      <div className="bg-white dark:bg-soft-800 rounded-xl p-6 border border-soft-200 dark:border-soft-700">
        <h2 className="text-xl font-bold mb-4">Self-Score Rubric</h2>
        <p className="text-soft-600 dark:text-soft-400 mb-6">
          Reflect on your recent sessions. Be honest and kind to yourself.
        </p>

        <div className="space-y-6">
          {RUBRIC_ITEMS.map(item => (
            <div key={item.id} className="p-4 bg-soft-50 dark:bg-soft-700 rounded-lg">
              <p className="font-bold mb-1">{item.label}</p>
              <p className="text-sm text-soft-600 dark:text-soft-400 mb-3">{item.description}</p>
              <div className="flex gap-2">
                {SCALE_DESCRIPTIONS.map(({ value, label, emoji }) => (
                  <div key={value} className="flex flex-col items-center gap-1">
                    <span className="text-2xl">{emoji}</span>
                    <span className="text-xs text-soft-600 dark:text-soft-400">{label}</span>
                  </div>
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>

      {showForm && (
        <AssessmentForm
          onSubmit={handleAddAssessment}
          onCancel={() => setShowForm(false)}
          rubricItems={RUBRIC_ITEMS}
        />
      )}

      {/* Previous Assessments */}
      {assessments.length > 0 && (
        <div className="space-y-3">
          <h2 className="text-xl font-bold">Your Assessments</h2>
          {assessments.slice().reverse().map(assessment => (
            <div
              key={assessment.id}
              className="bg-white dark:bg-soft-800 rounded-xl p-4 border border-soft-200 dark:border-soft-700"
            >
              <div className="flex items-start justify-between mb-3">
                <div>
                  <p className="font-bold">{new Date(assessment.date).toLocaleDateString()}</p>
                  <p className="text-sm text-soft-600 dark:text-soft-400">
                    Average: {((assessment.energyMatching + assessment.imitation + assessment.responsiveness + assessment.warmth) / 4).toFixed(1)}/5
                  </p>
                </div>
                <button
                  onClick={() => handleDelete(assessment.id)}
                  className="text-secondary-600 hover:text-secondary-700 transition"
                >
                  Delete
                </button>
              </div>
              <div className="grid grid-cols-4 gap-2 text-sm">
                {[
                  { label: 'Energy', value: assessment.energyMatching },
                  { label: 'Imitation', value: assessment.imitation },
                  { label: 'Responsiveness', value: assessment.responsiveness },
                  { label: 'Warmth', value: assessment.warmth },
                ].map(item => (
                  <div key={item.label} className="text-center p-2 bg-soft-50 dark:bg-soft-700 rounded">
                    <p className="font-medium">{item.value}</p>
                    <p className="text-xs text-soft-600 dark:text-soft-400">{item.label}</p>
                  </div>
                ))}
              </div>
            </div>
          ))}
        </div>
      )}
    </div>
  )
}
```

