### `src/pages/Settings.tsx`

```typescript
import { useState, useEffect } from 'react'
import { Download, Upload, Lock, Trash2 } from 'lucide-react'
import { Theme } from '../types'
import {
  exportAllData,
  importAllData,
  clearAllData,
  setPINLock,
  verifyPIN,
  removePINLock,
  getStorageItem,
} from '../lib/storage'

interface SettingsProps {
  onPinRequiredChange: (required: boolean) => void
}

export default function Settings({ onPinRequiredChange }: SettingsProps) {
  const [pinEnabled, setPinEnabled] = useState(false)
  const [currentPin, setCurrentPin] = useState('')
  const [newPin, setNewPin] = useState('')
  const [confirmPin, setConfirmPin] = useState('')
  const [pinMessage, setPinMessage] = useState('')
  const [showDemoData, setShowDemoData] = useState(false)

  useEffect(() => {
    const pinData = getStorageItem('pinLock', null)
    setPinEnabled(!!pinData)
  }, [])

  const handleSetPin = (e: React.FormEvent) => {
    e.preventDefault()

    if (pinEnabled && !currentPin) {
      setPinMessage('Please enter your current PIN')
      return
    }

    if (pinEnabled && !verifyPIN(currentPin)) {
      setPinMessage('Current PIN is incorrect')
      return
    }

    if (!newPin || newPin.length !== 4) {
      setPinMessage('PIN must be 4 digits')
      return
    }

    if (newPin !== confirmPin) {
      setPinMessage('PINs do not match')
      return
    }

    setPINLock(newPin)
    setPinMessage('PIN set successfully!')
    setPinEnabled(true)
    onPinRequiredChange(true)
    setCurrentPin('')
    setNewPin('')
    setConfirmPin('')

    setTimeout(() => setPinMessage(''), 3000)
  }

  const handleRemovePin = () => {
    if (window.confirm('Remove PIN lock?')) {
      removePINLock()
      setPinEnabled(false)
      onPinRequiredChange(false)
      setPinMessage('PIN lock removed')
      setTimeout(() => setPinMessage(''), 3000)
    }
  }

  const handleExportData = () => {
    const data = exportAllData()
    const blob = new Blob([JSON.stringify(data, null, 2)], { type: 'application/json' })
    const url = window.URL.createObjectURL(blob)
    const a = document.createElement('a')
    a.href = url
    a.download = `autism-companion-backup-${new Date().toISOString().split('T')[0]}.json`
    a.click()
  }

  const handleImportData = (e: React.ChangeEvent<HTMLInputElement>) => {
    const file = e.target.files?.[0]
    if (!file) return

    const reader = new FileReader()
    reader.onload = (event) => {
      try {
        const data = JSON.parse(event.target?.result as string)
        if (window.confirm('This will overwrite all existing data. Continue?')) {
          importAllData(data)
          window.location.reload()
        }
      } catch (error) {
        alert('Invalid backup file')
      }
    }
    reader.readAsText(file)
  }

  const handleClearData = () => {
    if (window.confirm('Delete ALL data? This cannot be undone.')) {
      if (window.confirm('Are you absolutely sure?')) {
        clearAllData()
        window.location.reload()
      }
    }
  }

  return (
    <div className="space-y-6 max-w-2xl">
      <h1 className="text-3xl font-bold">Settings</h1>

      {/* PIN Lock Section */}
      <div className="bg-white dark:bg-soft-800 rounded-xl p-6 border border-soft-200 dark:border-soft-700">
        <div className="flex items-center gap-3 mb-4">
          <Lock className="w-5 h-5" />
          <h2 className="text-xl font-bold">PIN Lock</h2>
        </div>

        <p className="text-sm text-soft-600 dark:text-soft-400 mb-4">
          Protect your app with a 4-digit PIN. {pinEnabled ? 'Currently enabled.' : 'Not set.'}
        </p>

        <form onSubmit={handleSetPin} className="space-y-4">
          {pinEnabled && (
            <div>
              <label className="block text-sm font-medium mb-2">Current PIN</label>
              <input
                type="password"
                inputMode="numeric"
                maxLength="4"
                value={currentPin}
                onChange={(e) => setCurrentPin(e.target.value.replace(/\D/g, ''))}
                placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢"
                className="w-full px-4 py-2 border border-soft-200 dark:border-soft-600 rounded-lg dark:bg-soft-700"
              />
            </div>
          )}

          <div>
            <label className="block text-sm font-medium mb-2">New PIN (4 digits)</label>
            <input
              type="password"
              inputMode="numeric"
              maxLength="4"
              value={newPin}
              onChange={(e) => setNewPin(e.target.value.replace(/\D/g, ''))}
              placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢"
              className="w-full px-4 py-2 border border-soft-200 dark:border-soft-600 rounded-lg dark:bg-soft-700"
            />
          </div>

          <div>
            <label className="block text-sm font-medium mb-2">Confirm PIN</label>
            <input
              type="password"
              inputMode="numeric"
              maxLength="4"
              value={confirmPin}
              onChange={(e) => setConfirmPin(e.target.value.replace(/\D/g, ''))}
              placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢"
              className="w-full px-4 py-2 border border-soft-200 dark:border-soft-600 rounded-lg dark:bg-soft-700"
            />
          </div>

          {pinMessage && (
            <p className={`text-sm ${pinMessage.includes('success') ? 'text-primary-600 dark:text-primary-400' : 'text-secondary-600 dark:text-secondary-400'}`}>
              {pinMessage}
            </p>
          )}

          <div className="flex gap-2">
            <button
              type="submit"
              className="flex-1 px-4 py-2 bg-primary-500 hover:bg-primary-600 text-white rounded-lg transition"
            >
              Set PIN
            </button>
            {pinEnabled && (
              <button
                type="button"
                onClick={handleRemovePin}
                className="flex-1 px-4 py-2 bg-secondary-500 hover:bg-secondary-600 text-white rounded-lg transition"
              >
                Remove PIN
              </button>
            )}
          </div>
        </form>
      </div>

      {/* Data Management */}
      <div className="bg-white dark:bg-soft-800 rounded-xl p-6 border border-soft-200 dark:border-soft-700">
        <h2 className="text-xl font-bold mb-4">Data Management</h2>

        <div className="space-y-3">
          <button
            onClick={handleExportData}
            className="w-full flex items-center justify-center gap-2 px-4 py-3 bg-primary-100 dark:bg-primary-900 text-primary-700 dark:text-primary-300 rounded-lg hover:bg-primary-200 dark:hover:bg-primary-800 transition"
          >
            <Download className="w-4 h-4" />
            Export All Data (JSON)
          </button>

          <label className="w-full flex items-center justify-center gap-2 px-4 py-3 bg-secondary-100 dark:bg-secondary-900 text-secondary-700 dark:text-secondary-300 rounded-lg hover:bg-secondary-200 dark:hover:bg-secondary-800 transition cursor-pointer">
            <Upload className="w-4 h-4" />
            Import from Backup
            <input
              type="file"
              accept=".json"
              onChange={handleImportData}
              className="hidden"
            />
          </label>

          <button
            onClick={handleClearData}
            className="w-full flex items-center justify-center gap-2 px-4 py-3 bg-soft-100 dark:bg-soft-700 text-soft-700 dark:text-soft-300 rounded-lg hover:bg-soft-200 dark:hover:bg-soft-600 transition"
          >
            <Trash2 className="w-4 h-4" />
            Clear All Data
          </button>
        </div>
      </div>

      {/* Developer */}
      <div className="bg-white dark:bg-soft-800 rounded-xl p-6 border border-soft-200 dark:border-soft-700">
        <h2 className="text-xl font-bold mb-4">Demo Data</h2>
        <p className="text-sm text-soft-600 dark:text-soft-400 mb-4">
          Load sample data for testing and screenshots.
        </p>
        <label className="flex items-center gap-3 cursor-pointer">
          <input
            type="checkbox"
            checked={showDemoData}
            onChange={(e) => setShowDemoData(e.target.checked)}
            className="w-4 h-4"
          />
          <span className="text-sm">Show demo data on dashboard</span>
        </label>
      </div>

      {/* About */}
      <div className="bg-soft-50 dark:bg-soft-700 rounded-xl p-6 border border-soft-200 dark:border-soft-600">
        <h3 className="font-bold mb-2">About</h3>
        <p className="text-sm text-soft-600 dark:text-soft-400">
          Autism Parenting Companion v1.0.0
        </p>
        <p className="text-sm text-soft-600 dark:text-soft-400 mt-2">
          A warm, offline-first tool for families with autistic children.
        </p>
        <p className="text-xs text-soft-500 dark:text-soft-500 mt-4">
          All data is stored locally on your device. No data is sent to servers.
        </p>
      </div>
    </div>
  )
}
```

