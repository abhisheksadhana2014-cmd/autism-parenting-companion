### `src/pages/ReframeJournal.tsx`

```typescript
import { useState, useEffect } from 'react'
import { Plus, Download, Search } from 'lucide-react'
import { ReframeJournalEntry } from '../types'
import { getJournalEntries, addJournalEntry, deleteJournalEntry } from '../lib/storage'
import JournalEntryForm from '../components/JournalEntryForm'
import JournalEntryCard from '../components/JournalEntryCard'

export default function ReframeJournal() {
  const [entries, setEntries] = useState<ReframeJournalEntry[]>([])
  const [showForm, setShowForm] = useState(false)
  const [searchTerm, setSearchTerm] = useState('')
  const [filterTag, setFilterTag] = useState<string | null>(null)
  const [filterIntensity, setFilterIntensity] = useState<number | null>(null)

  useEffect(() => {
    setEntries(getJournalEntries())
  }, [])

  const handleAddEntry = (entry: ReframeJournalEntry) => {
    addJournalEntry(entry)
    setEntries([entry, ...entries])
    setShowForm(false)
  }

  const handleDelete = (id: string) => {
    if (window.confirm('Delete this entry?')) {
      deleteJournalEntry(id)
      setEntries(entries.filter(e => e.id !== id))
    }
  }

  // Get all unique tags
  const allTags = Array.from(new Set(entries.flatMap(e => e.tags)))

  // Filter entries
  const filtered = entries.filter(entry => {
    const matchesSearch = searchTerm === '' || 
      entry.trigger.toLowerCase().includes(searchTerm.toLowerCase()) ||
      entry.thought.toLowerCase().includes(searchTerm.toLowerCase())
    
    const matchesTag = filterTag === null || entry.tags.includes(filterTag)
    const matchesIntensity = filterIntensity === null || entry.intensity === filterIntensity

    return matchesSearch && matchesTag && matchesIntensity
  })

  // Pattern insights
  const tagCounts = new Map<string, number>()
  const triggerCounts = new Map<string, number>()

  entries.forEach(entry => {
    entry.tags.forEach(tag => {
      tagCounts.set(tag, (tagCounts.get(tag) || 0) + 1)
    })
    triggerCounts.set(entry.trigger, (triggerCounts.get(entry.trigger) || 0) + 1)
  })

  const topTags = Array.from(tagCounts.entries())
    .sort((a, b) => b[1] - a[1])
    .slice(0, 5)

  const repeatingTriggers = Array.from(triggerCounts.entries())
    .filter(([_, count]) => count > 1)
    .sort((a, b) => b[1] - a[1])

  return (
    <div className="space-y-6">
      <div className="flex items-center justify-between">
        <h1 className="text-3xl font-bold">Reframe Journal</h1>
        <button
          onClick={() => setShowForm(true)}
          className="flex items-center gap-2 px-4 py-2 bg-primary-500 hover:bg-primary-600 text-white rounded-lg transition"
        >
          <Plus className="w-4 h-4" />
          New Entry
        </button>
      </div>

      {showForm && (
        <JournalEntryForm
          onSubmit={handleAddEntry}
          onCancel={() => setShowForm(false)}
        />
      )}

      {/* Insights */}
      {entries.length > 0 && (
        <div className="grid md:grid-cols-2 gap-4">
          {topTags.length > 0 && (
            <div className="bg-white dark:bg-soft-800 rounded-xl p-4 border border-soft-200 dark:border-soft-700">
              <p className="font-bold mb-3">Top Triggers</p>
              <div className="space-y-2">
                {topTags.map(([tag, count]) => (
                  <div key={tag} className="flex items-center justify-between">
                    <span className="text-sm">{tag}</span>
                    <span className="bg-primary-100 dark:bg-primary-900 text-primary-700 dark:text-primary-300 text-xs font-bold px-2 py-1 rounded-full">
                      {count}x
                    </span>
                  </div>
                ))}
              </div>
            </div>
          )}

          {repeatingTriggers.length > 0 && (
            <div className="bg-white dark:bg-soft-800 rounded-xl p-4 border border-soft-200 dark:border-soft-700">
              <p className="font-bold mb-3">Repeating Patterns üîç</p>
              <div className="space-y-2">
                {repeatingTriggers.slice(0, 3).map(([trigger, count]) => (
                  <div key={trigger} className="text-sm p-2 bg-secondary-50 dark:bg-secondary-900 text-secondary-700 dark:text-secondary-300 rounded">
                    <p className="font-medium">"{trigger}"</p>
                    <p className="text-xs">Appeared {count} times</p>
                  </div>
                ))}
              </div>
            </div>
          )}
        </div>
      )}

      {/* Search & Filters */}
      <div className="space-y-3 bg-white dark:bg-soft-800 rounded-xl p-4 border border-soft-200 dark:border-soft-700">
        <div className="relative">
          <Search className="absolute left-3 top-3 w-4 h-4 text-soft-500" />
          <input
            type="text"
            placeholder="Search by trigger or thought..."
            value={searchTerm}
            onChange={(e) => setSearchTerm(e.target.value)}
            className="w-full pl-10 pr-4 py-2 border border-soft-200 dark:border-soft-600 rounded-lg dark:bg-soft-700 focus:outline-none focus:border-primary-500"
          />
        </div>

        <div className="flex gap-2 flex-wrap">
          {allTags.map(tag => (
            <button
              key={tag}
              onClick={() => setFilterTag(filterTag === tag ? null : tag)}
              className={`px-3 py-1 rounded-full text-sm transition ${
                filterTag === tag
                  ? 'bg-primary-500 text-white'
                  : 'bg-soft-100 dark:bg-soft-700 hover:bg-soft-200 dark:hover:bg-soft-600'
              }`}
            >
              {tag}
            </button>
          ))}
        </div>
      </div>

      {/* Entries */}
      {filtered.length === 0 ? (
        <div className="text-center py-12 bg-white dark:bg-soft-800 rounded-xl border border-soft-200 dark:border-soft-700">
          <p className="text-soft-600 dark:text-soft-400">
            {entries.length === 0
              ? 'No entries yet. Start by capturing a moment to reframe.'
              : 'No entries match your filters.'}
          </p>
        </div>
      ) : (
        <div className="grid gap-4">
          {filtered.map(entry => (
            <JournalEntryCard
              key={entry.id}
              entry={entry}
              onDelete={() => handleDelete(entry.id)}
            />
          ))}
        </div>
      )}
    </div>
  )
}
```

