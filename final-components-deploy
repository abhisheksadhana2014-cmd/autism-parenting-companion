### `src/components/JournalEntryCard.tsx`

```typescript
import { ReframeJournalEntry } from '../types'
import { Trash2, Tag } from 'lucide-react'

interface JournalEntryCardProps {
  entry: ReframeJournalEntry
  onDelete: () => void
}

export default function JournalEntryCard({ entry, onDelete }: JournalEntryCardProps) {
  const intensityColor = {
    1: 'bg-primary-100 dark:bg-primary-900',
    2: 'bg-secondary-100 dark:bg-secondary-900',
    3: 'bg-warm-100 dark:bg-warm-900',
    4: 'bg-secondary-100 dark:bg-secondary-900',
    5: 'bg-secondary-200 dark:bg-secondary-800',
  }

  return (
    <div className="bg-white dark:bg-soft-800 rounded-xl p-4 border border-soft-200 dark:border-soft-700">
      <div className="flex items-start justify-between mb-3">
        <p className="text-sm text-soft-600 dark:text-soft-400">
          {new Date(entry.date).toLocaleDateString()}
        </p>
        <button
          onClick={onDelete}
          className="p-1 hover:bg-secondary-100 dark:hover:bg-secondary-900 text-secondary-600 dark:text-secondary-400 rounded transition"
        >
          <Trash2 className="w-4 h-4" />
        </button>
      </div>

      <div className="space-y-3">
        <div>
          <p className="text-xs font-bold text-soft-600 dark:text-soft-400">TRIGGER</p>
          <p className="text-sm">{entry.trigger}</p>
        </div>

        <div>
          <p className="text-xs font-bold text-soft-600 dark:text-soft-400">MY THOUGHT</p>
          <p className="text-sm">{entry.thought}</p>
        </div>

        <div className="grid grid-cols-2 gap-3">
          <div>
            <p className="text-xs font-bold text-soft-600 dark:text-soft-400">FEELING</p>
            <p className="text-sm capitalize">{entry.response.feeling}</p>
          </div>
          <div>
            <p className="text-xs font-bold text-soft-600 dark:text-soft-400">ACTION</p>
            <p className="text-sm">{entry.response.action || '‚Äî'}</p>
          </div>
        </div>

        <div>
          <p className="text-xs font-bold text-soft-600 dark:text-soft-400">ALTERNATIVE THOUGHT</p>
          <p className="text-sm italic text-primary-600 dark:text-primary-400">
            {entry.alternativeThought}
          </p>
        </div>

        {entry.tags.length > 0 && (
          <div className="flex flex-wrap gap-2">
            {entry.tags.map((tag) => (
              <span
                key={tag}
                className="inline-flex items-center gap-1 px-2 py-1 bg-soft-100 dark:bg-soft-700 rounded-full text-xs"
              >
                <Tag className="w-3 h-3" />
                {tag}
              </span>
            ))}
          </div>
        )}

        <div className="flex items-center justify-between pt-2 border-t border-soft-200 dark:border-soft-700">
          <div className={`px-3 py-1 rounded-full text-xs font-bold ${intensityColor[entry.intensity as keyof typeof intensityColor]}`}>
            Intensity: {entry.intensity}/5
          </div>
          {entry.outcome && (
            <span className={`text-xs font-bold capitalize px-3 py-1 rounded-full ${
              entry.outcome === 'improved'
                ? 'bg-primary-100 dark:bg-primary-900 text-primary-700 dark:text-primary-300'
                : entry.outcome === 'worse'
                ? 'bg-secondary-100 dark:bg-secondary-900 text-secondary-700 dark:text-secondary-300'
                : 'bg-soft-100 dark:bg-soft-700'
            }`}>
              {entry.outcome}
            </span>
          )}
        </div>
      </div>
    </div>
  )
}
```

