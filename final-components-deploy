## Remaining Component Files to Create

### `src/components/AssessmentForm.tsx`

```typescript
import { useState } from 'react'
import { ConnectionAssessment } from '../types'
import { v4 as uuidv4 } from 'crypto'

interface AssessmentFormProps {
  onSubmit: (assessment: ConnectionAssessment) => void
  onCancel: () => void
  rubricItems: Array<{ id: string; label: string; description: string }>
}

export default function AssessmentForm({
  onSubmit,
  onCancel,
  rubricItems,
}: AssessmentFormProps) {
  const [formData, setFormData] = useState({
    energyMatching: 3,
    imitation: 3,
    responsiveness: 3,
    warmth: 3,
    notes: '',
  })

  const handleSubmit = (e: React.FormEvent) => {
    e.preventDefault()

    const assessment: ConnectionAssessment = {
      id: uuidv4(),
      date: new Date().toISOString().split('T')[0],
      energyMatching: formData.energyMatching,
      imitation: formData.imitation,
      responsiveness: formData.responsiveness,
      warmth: formData.warmth,
      notes: formData.notes,
      createdAt: new Date().toISOString(),
    }

    onSubmit(assessment)
  }

  return (
    <div className="bg-white dark:bg-soft-800 rounded-xl p-6 border border-soft-200 dark:border-soft-700">
      <h2 className="text-xl font-bold mb-4">Today's Self-Assessment</h2>

      <form onSubmit={handleSubmit} className="space-y-6">
        {rubricItems.map((item) => (
          <div key={item.id}>
            <label className="block font-medium mb-2">{item.label}</label>
            <p className="text-sm text-soft-600 dark:text-soft-400 mb-3">
              {item.description}
            </p>

            <div className="flex gap-2">
              {[1, 2, 3, 4, 5].map((value) => (
                <button
                  key={value}
                  type="button"
                  onClick={() =>
                    setFormData({
                      ...formData,
                      [item.id]: value,
                    })
                  }
                  className={`flex-1 py-3 rounded-lg font-bold transition ${
                    formData[item.id as keyof typeof formData] === value
                      ? 'bg-primary-500 text-white'
                      : 'bg-soft-100 dark:bg-soft-700 hover:bg-soft-200 dark:hover:bg-soft-600'
                  }`}
                >
                  {value}
                </button>
              ))}
            </div>
          </div>
        ))}

        <div>
          <label className="block text-sm font-medium mb-1">Notes (optional)</label>
          <textarea
            value={formData.notes}
            onChange={(e) => setFormData({ ...formData, notes: e.target.value })}
            placeholder="Reflect on this session..."
            className="w-full px-3 py-2 border border-soft-200 dark:border-soft-600 rounded-lg dark:bg-soft-700 min-h-24"
          />
        </div>

        <div className="p-4 bg-primary-50 dark:bg-primary-900 rounded-lg border border-primary-200 dark:border-primary-800">
          <p className="text-sm text-primary-700 dark:text-primary-300">
            üí° <strong>Tip:</strong> Be honest and kind to yourself. You're doing
            better than you think.
          </p>
        </div>

        <div className="flex gap-2">
          <button
            type="submit"
            className="flex-1 bg-primary-500 hover:bg-primary-600 text-white font-bold py-2 rounded-lg transition"
          >
            Save Assessment
          </button>
          <button
            type="button"
            onClick={onCancel}
            className="flex-1 bg-soft-100 dark:bg-soft-700 hover:bg-soft-200 dark:hover:bg-soft-600 font-bold py-2 rounded-lg transition"
          >
            Cancel
          </button>
        </div>
      </form>
    </div>
  )
}
```

