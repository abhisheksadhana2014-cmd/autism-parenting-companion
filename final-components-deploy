### `src/components/JournalEntryForm.tsx`

```typescript
import { useState } from 'react'
import { ReframeJournalEntry } from '../types'
import { v4 as uuidv4 } from 'crypto'

interface JournalEntryFormProps {
  onSubmit: (entry: ReframeJournalEntry) => void
  onCancel: () => void
}

export default function JournalEntryForm({ onSubmit, onCancel }: JournalEntryFormProps) {
  const [formData, setFormData] = useState({
    trigger: '',
    thought: '',
    feeling: 'frustrated',
    action: '',
    alternativeThought: '',
    tags: [] as string[],
    intensity: 3,
    outcome: undefined as 'improved' | 'same' | 'worse' | undefined,
  })

  const commonTags = [
    'transitions',
    'sensory',
    'sleep',
    'food',
    'public-place',
    'sibling',
    'meltdown',
    'routine',
  ]

  const handleSubmit = (e: React.FormEvent) => {
    e.preventDefault()

    if (!formData.trigger || !formData.thought) {
      alert('Please fill in trigger and thought')
      return
    }

    const entry: ReframeJournalEntry = {
      id: uuidv4(),
      date: new Date().toISOString().split('T')[0],
      trigger: formData.trigger,
      thought: formData.thought,
      response: {
        feeling: formData.feeling,
        action: formData.action,
      },
      alternativeThought: formData.alternativeThought,
      tags: formData.tags,
      intensity: formData.intensity,
      outcome: formData.outcome,
      createdAt: new Date().toISOString(),
    }

    onSubmit(entry)
  }

  return (
    <div className="bg-white dark:bg-soft-800 rounded-xl p-6 border border-soft-200 dark:border-soft-700">
      <h2 className="text-xl font-bold mb-4">New Journal Entry</h2>

      <form onSubmit={handleSubmit} className="space-y-4">
        <div>
          <label className="block text-sm font-medium mb-1">Trigger</label>
          <p className="text-xs text-soft-600 dark:text-soft-400 mb-2">
            What happened?
          </p>
          <textarea
            value={formData.trigger}
            onChange={(e) => setFormData({ ...formData, trigger: e.target.value })}
            placeholder="Describe the situation..."
            className="w-full px-3 py-2 border border-soft-200 dark:border-soft-600 rounded-lg dark:bg-soft-700 min-h-20"
          />
        </div>

        <div>
          <label className="block text-sm font-medium mb-1">Your Thought</label>
          <p className="text-xs text-soft-600 dark:text-soft-400 mb-2">
            What did you believe about this?
          </p>
          <textarea
            value={formData.thought}
            onChange={(e) => setFormData({ ...formData, thought: e.target.value })}
            placeholder="Your interpretation..."
            className="w-full px-3 py-2 border border-soft-200 dark:border-soft-600 rounded-lg dark:bg-soft-700 min-h-20"
          />
        </div>

        <div className="grid grid-cols-2 gap-3">
          <div>
            <label className="block text-sm font-medium mb-1">Feeling</label>
            <select
              value={formData.feeling}
              onChange={(e) => setFormData({ ...formData, feeling: e.target.value })}
              className="w-full px-3 py-2 border border-soft-200 dark:border-soft-600 rounded-lg dark:bg-soft-700"
            >
              <option>frustrated</option>
              <option>overwhelmed</option>
              <option>anxious</option>
              <option>sad</option>
              <option>angry</option>
              <option>tired</option>
              <option>guilty</option>
              <option>hopeful</option>
            </select>
          </div>

          <div>
            <label className="block text-sm font-medium mb-1">Intensity</label>
            <input
              type="range"
              min="1"
              max="5"
              value={formData.intensity}
              onChange={(e) =>
                setFormData({ ...formData, intensity: parseInt(e.target.value) })
              }
              className="w-full"
            />
            <p className="text-xs text-center text-soft-600 dark:text-soft-400 mt-1">
              {formData.intensity}/5
            </p>
          </div>
        </div>

        <div>
          <label className="block text-sm font-medium mb-1">Your Response</label>
          <p className="text-xs text-soft-600 dark:text-soft-400 mb-2">
            What did you do?
          </p>
          <textarea
            value={formData.action}
            onChange={(e) => setFormData({ ...formData, action: e.target.value })}
            placeholder="Your action..."
            className="w-full px-3 py-2 border border-soft-200 dark:border-soft-600 rounded-lg dark:bg-soft-700 min-h-20"
          />
        </div>

        <div>
          <label className="block text-sm font-medium mb-1">Alternative Thought</label>
          <p className="text-xs text-soft-600 dark:text-soft-400 mb-2">
            A kinder way to view this situation
          </p>
          <textarea
            value={formData.alternativeThought}
            onChange={(e) =>
              setFormData({ ...formData, alternativeThought: e.target.value })
            }
            placeholder="Try a different perspective..."
            className="w-full px-3 py-2 border border-soft-200 dark:border-soft-600 rounded-lg dark:bg-soft-700 min-h-20"
          />
        </div>

        <div>
          <label className="block text-sm font-medium mb-2">Tags</label>
          <div className="flex flex-wrap gap-2">
            {commonTags.map((tag) => (
              <button
                key={tag}
                type="button"
                onClick={() =>
                  setFormData({
                    ...formData,
                    tags: formData.tags.includes(tag)
                      ? formData.tags.filter((t) => t !== tag)
                      : [...formData.tags, tag],
                  })
                }
                className={`px-3 py-1 rounded-full text-sm transition ${
                  formData.tags.includes(tag)
                    ? 'bg-primary-500 text-white'
                    : 'bg-soft-100 dark:bg-soft-700 hover:bg-soft-200 dark:hover:bg-soft-600'
                }`}
              >
                {tag}
              </button>
            ))}
          </div>
        </div>

        <div>
          <label className="block text-sm font-medium mb-2">Outcome (optional)</label>
          <div className="flex gap-2">
            {['improved', 'same', 'worse'].map((outcome) => (
              <button
                key={outcome}
                type="button"
                onClick={() =>
                  setFormData({
                    ...formData,
                    outcome: formData.outcome === outcome ? undefined : (outcome as any),
                  })
                }
                className={`flex-1 py-2 rounded-lg text-sm font-medium transition ${
                  formData.outcome === outcome
                    ? 'bg-primary-500 text-white'
                    : 'bg-soft-100 dark:bg-soft-700 hover:bg-soft-200 dark:hover:bg-soft-600'
                }`}
              >
                {outcome}
              </button>
            ))}
          </div>
        </div>

        <div className="flex gap-2">
          <button
            type="submit"
            className="flex-1 bg-primary-500 hover:bg-primary-600 text-white font-bold py-2 rounded-lg transition"
          >
            Save Entry
          </button>
          <button
            type="button"
            onClick={onCancel}
            className="flex-1 bg-soft-100 dark:bg-soft-700 hover:bg-soft-200 dark:hover:bg-soft-600 font-bold py-2 rounded-lg transition"
          >
            Cancel
          </button>
        </div>
      </form>
    </div>
  )
}
```

