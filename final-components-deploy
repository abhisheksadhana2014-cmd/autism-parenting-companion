### `src/components/GrowthForm.tsx`

```typescript
import { useState } from 'react'
import { GoalCard, SkillAreaType, SKILL_AREAS } from '../types'
import { v4 as uuidv4 } from 'crypto'

interface GrowthFormProps {
  onSubmit: (goal: GoalCard) => void
  onCancel: () => void
}

export default function GrowthForm({ onSubmit, onCancel }: GrowthFormProps) {
  const [formData, setFormData] = useState({
    skillArea: 'shared_attention' as SkillAreaType,
    title: '',
    description: '',
    targetLevel: 3,
    currentLevel: 1,
  })

  const [milestones, setMilestones] = useState<Array<{ text: string }>>([
    { text: '' },
    { text: '' },
    { text: '' },
  ])

  const handleSubmit = (e: React.FormEvent) => {
    e.preventDefault()

    if (!formData.title) {
      alert('Please enter a goal title')
      return
    }

    const goal: GoalCard = {
      id: uuidv4(),
      skillArea: formData.skillArea,
      title: formData.title,
      description: formData.description,
      targetLevel: formData.targetLevel,
      currentLevel: formData.currentLevel,
      status: 'on_track',
      createdAt: new Date().toISOString(),
      milestones: milestones
        .filter((m) => m.text)
        .map((m) => ({
          id: uuidv4(),
          text: m.text,
          completed: false,
          notes: '',
        })),
    }

    onSubmit(goal)
  }

  const skillAreas = Object.entries(SKILL_AREAS) as [SkillAreaType, string][]

  return (
    <div className="bg-white dark:bg-soft-800 rounded-xl p-6 border border-soft-200 dark:border-soft-700">
      <h2 className="text-xl font-bold mb-4">Create a Growth Goal</h2>

      <form onSubmit={handleSubmit} className="space-y-4">
        <div>
          <label className="block text-sm font-medium mb-1">Skill Area</label>
          <select
            value={formData.skillArea}
            onChange={(e) =>
              setFormData({
                ...formData,
                skillArea: e.target.value as SkillAreaType,
              })
            }
            className="w-full px-3 py-2 border border-soft-200 dark:border-soft-600 rounded-lg dark:bg-soft-700"
          >
            {skillAreas.map(([key, label]) => (
              <option key={key} value={key}>
                {label}
              </option>
            ))}
          </select>
        </div>

        <div>
          <label className="block text-sm font-medium mb-1">Goal Title</label>
          <input
            type="text"
            value={formData.title}
            onChange={(e) => setFormData({ ...formData, title: e.target.value })}
            placeholder="e.g., Increase eye contact during play"
            className="w-full px-3 py-2 border border-soft-200 dark:border-soft-600 rounded-lg dark:bg-soft-700"
          />
        </div>

        <div>
          <label className="block text-sm font-medium mb-1">Description (optional)</label>
          <textarea
            value={formData.description}
            onChange={(e) =>
              setFormData({ ...formData, description: e.target.value })
            }
            placeholder="Why is this goal important?"
            className="w-full px-3 py-2 border border-soft-200 dark:border-soft-600 rounded-lg dark:bg-soft-700 min-h-20"
          />
        </div>

        <div className="grid grid-cols-2 gap-3">
          <div>
            <label className="block text-sm font-medium mb-1">Current Level</label>
            <input
              type="number"
              min="1"
              max="5"
              value={formData.currentLevel}
              onChange={(e) =>
                setFormData({
                  ...formData,
                  currentLevel: parseInt(e.target.value),
                })
              }
              className="w-full px-3 py-2 border border-soft-200 dark:border-soft-600 rounded-lg dark:bg-soft-700"
            />
          </div>

          <div>
            <label className="block text-sm font-medium mb-1">Target Level</label>
            <input
              type="number"
              min="1"
              max="5"
              value={formData.targetLevel}
              onChange={(e) =>
                setFormData({
                  ...formData,
                  targetLevel: parseInt(e.target.value),
                })
              }
              className="w-full px-3 py-2 border border-soft-200 dark:border-soft-600 rounded-lg dark:bg-soft-700"
            />
          </div>
        </div>

        <div>
          <label className="block text-sm font-medium mb-2">Milestones</label>
          <div className="space-y-2">
            {milestones.map((milestone, idx) => (
              <input
                key={idx}
                type="text"
                value={milestone.text}
                onChange={(e) => {
                  const updated = [...milestones]
                  updated[idx].text = e.target.value
                  setMilestones(updated)
                }}
                placeholder={`Milestone ${idx + 1}`}
                className="w-full px-3 py-2 border border-soft-200 dark:border-soft-600 rounded-lg dark:bg-soft-700"
              />
            ))}
          </div>
        </div>

        <div className="flex gap-2">
          <button
            type="submit"
            className="flex-1 bg-primary-500 hover:bg-primary-600 text-white font-bold py-2 rounded-lg transition"
          >
            Create Goal
          </button>
          <button
            type="button"
            onClick={onCancel}
            className="flex-1 bg-soft-100 dark:bg-soft-700 hover:bg-soft-200 dark:hover:bg-soft-600 font-bold py-2 rounded-lg transition"
          >
            Cancel
          </button>
        </div>
      </form>
    </div>
  )
}
```

