### `src/components/NoteForm.tsx`

```typescript
import { useState } from 'react'
import { ResourceNote } from '../types'
import { v4 as uuidv4 } from 'crypto'

interface NoteFormProps {
  onSubmit: (note: ResourceNote) => void
  onCancel: () => void
}

export default function NoteForm({ onSubmit, onCancel }: NoteFormProps) {
  const [title, setTitle] = useState('')
  const [content, setContent] = useState('')

  const handleSubmit = (e: React.FormEvent) => {
    e.preventDefault()

    if (!title) {
      alert('Please enter a note title')
      return
    }

    const note: ResourceNote = {
      id: uuidv4(),
      title,
      content,
      createdAt: new Date().toISOString(),
      updatedAt: new Date().toISOString(),
    }

    onSubmit(note)
  }

  return (
    <div className="bg-white dark:bg-soft-800 rounded-xl p-6 border border-soft-200 dark:border-soft-700">
      <h2 className="text-xl font-bold mb-4">New Note</h2>

      <form onSubmit={handleSubmit} className="space-y-4">
        <div>
          <label className="block text-sm font-medium mb-1">Title</label>
          <input
            type="text"
            value={title}
            onChange={(e) => setTitle(e.target.value)}
            placeholder="e.g., Favorite Play Ideas"
            className="w-full px-3 py-2 border border-soft-200 dark:border-soft-600 rounded-lg dark:bg-soft-700"
            autoFocus
          />
        </div>

        <div>
          <label className="block text-sm font-medium mb-1">Content (Markdown)</label>
          <p className="text-xs text-soft-600 dark:text-soft-400 mb-2">
            You can use Markdown formatting: # headings, **bold**, etc.
          </p>
          <textarea
            value={content}
            onChange={(e) => setContent(e.target.value)}
            placeholder="Start typing... You can use Markdown."
            className="w-full px-3 py-2 border border-soft-200 dark:border-soft-600 rounded-lg dark:bg-soft-700 min-h-64 font-mono text-sm"
          />
        </div>

        <div className="flex gap-2">
          <button
            type="submit"
            className="flex-1 bg-primary-500 hover:bg-primary-600 text-white font-bold py-2 rounded-lg transition"
          >
            Save Note
          </button>
          <button
            type="button"
            onClick={onCancel}
            className="flex-1 bg-soft-100 dark:bg-soft-700 hover:bg-soft-200 dark:hover:bg-soft-600 font-bold py-2 rounded-lg transition"
          >
            Cancel
          </button>
        </div>
      </form>
    </div>
  )
}
```

